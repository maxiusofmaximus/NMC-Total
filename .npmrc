# NPM Security Configuration for NMC Total

# Audit configuration
audit-level=moderate
fund=false

# Security settings
package-lock=true
save-exact=true
engine-strict=true

# Registry security
registry=https://registry.npmjs.org/

# Prevent automatic package installation
save=false
save-dev=false
save-optional=false

# Security audit settings
audit=true

# Disable scripts from untrusted packages
ignore-scripts=true

# Prevent package-lock changes
package-lock-only=true

# Enable strict SSL
strict-ssl=true

# Timeout settings
timeout=60000
retry-timeout=60000

# Cache settings for security
cache-max=86400000
cache-min=10

# Disable telemetry
send-metrics=false

# Progress settings
progress=false
loglevel=warn